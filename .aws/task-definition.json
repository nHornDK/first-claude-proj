{
  "family": "dendo_task_definition",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:account::654862558684:account/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "dendo_container",
      "image": "PLACEHOLDER",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "ASPNETCORE_ENVIRONMENT", "value": "Production" },
        { "name": "AllowedOrigins", "value": "https://your-frontend-domain.com" }
      ],
      "secrets": [
        {
          "name": "ConnectionStrings__DefaultConnection",
          "valueFrom": "arn:aws:secretsmanager:eu-north-1:ACCOUNT_ID:secret:YOUR_SECRET_NAME:ConnectionStrings__DefaultConnection::"
        },
        {
          "name": "Jwt__Secret",
          "valueFrom": "arn:aws:secretsmanager:eu-north-1:ACCOUNT_ID:secret:YOUR_SECRET_NAME:Jwt__Secret::"
        },
        {
          "name": "Jwt__Issuer",
          "valueFrom": "arn:aws:secretsmanager:eu-north-1:ACCOUNT_ID:secret:YOUR_SECRET_NAME:Jwt__Issuer::"
        },
        {
          "name": "Jwt__Audience",
          "valueFrom": "arn:aws:secretsmanager:eu-north-1:ACCOUNT_ID:secret:YOUR_SECRET_NAME:Jwt__Audience::"
        },
        {
          "name": "DemoUser__Username",
          "valueFrom": "arn:aws:secretsmanager:eu-north-1:ACCOUNT_ID:secret:YOUR_SECRET_NAME:DemoUser__Username::"
        },
        {
          "name": "DemoUser__Password",
          "valueFrom": "arn:aws:secretsmanager:eu-north-1:ACCOUNT_ID:secret:YOUR_SECRET_NAME:DemoUser__Password::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/dendo",
          "awslogs-region": "eu-north-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
