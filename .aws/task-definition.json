{
  "family": "dendo_task_definition",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::654862558684:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "dendo_container",
      "image": "dendo-image",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        },
        {
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp"
        },
        {
          "containerPort": 443,
          "hostPort": 443,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "ASPNETCORE_ENVIRONMENT", "value": "Production" },
        { "name": "AllowedOrigins", "value": "https://api.dendo.dk,https://dendo.dk" }
      ],
      "secrets": [
        {
          "name": "ConnectionStrings__DefaultConnection",
          "valueFrom": "arn:aws:secretsmanager:eu-north-1:654862558684:secret:DENDO_SECRET:ConnectionStrings__DefaultConnection::"
        },
        {
          "name": "Jwt__Secret",
          "valueFrom": "arn:aws:secretsmanager:eu-north-1:654862558684:secret:DENDO_SECRET:Jwt__Secret::"
        },
        {
          "name": "Jwt__Issuer",
          "valueFrom": "arn:aws:secretsmanager:eu-north-1:654862558684:secret:DENDO_SECRET:Jwt__Issuer::"
        },
        {
          "name": "Jwt__Audience",
          "valueFrom": "arn:aws:secretsmanager:eu-north-1:654862558684:secret:DENDO_SECRET:Jwt__Audience::"
        },
        {
          "name": "DemoUser__Username",
          "valueFrom": "arn:aws:secretsmanager:eu-north-1:654862558684:secret:DENDO_SECRET:DemoUser__Username::"
        },
        {
          "name": "DemoUser__Password",
          "valueFrom": "arn:aws:secretsmanager:eu-north-1:654862558684:secret:DENDO_SECRET:DemoUser__Password::"
        }
      ],
      "dependsOn": [
        { "containerName": "postgres", "condition": "HEALTHY" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/dendo",
          "awslogs-region": "eu-north-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    },
    {
      "name": "postgres",
      "image": "postgres:17",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 5432,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "POSTGRES_DB", "value": "FirstClaudeDb" },
        { "name": "POSTGRES_USER", "value": "postgres" }
      ],
      "secrets": [
        {
          "name": "POSTGRES_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:eu-north-1:654862558684:secret:DENDO_SECRET:POSTGRES_PASSWORD::"
        }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "pg_isready -U postgres"],
        "interval": 5,
        "timeout": 5,
        "retries": 5,
        "startPeriod": 10
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/dendo",
          "awslogs-region": "eu-north-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
